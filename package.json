{
  "name": "react-netlify-identity",
  "version": "0.1.9",
  "description": "use netlify identity with react",
  "author": "sw-yx",
  "license": "MIT",
  "repository": "https://www.github.com/sw-yx/react-netlify-identity",
  "main": "dist/index.js",
  "umd:main": "dist/react-netlify-identity.umd.production.js",
  "module": "dist/react-netlify-identity.es.production.js",
  "typings": "dist/index.d.ts",
  "jsnext:main": "dist/index.es.js",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "unused_prepare": "yarn run build",
    "version": "yarn run build && auto-changelog -p --template keepachangelog && git add .",
    "prepublishOnly": "git push && git push --tags && gh-release",
    "predeploy": "cd example && yarn install && yarn run build",
    "deploy": "gh-pages -d example/build",
    "postinstall": "netlify-lambda install"
  },
  "dependencies": {
    "gotrue-js": "^0.9.25",
    "tsdx": "^0.6.0"
  },
  "peerDependencies": {
    "react": "^15.0.0 || ^16.0.0",
    "react-dom": "^15.0.0 || ^16.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@svgr/rollup": "^4.2.0",
    "@types/jest": "^23.1.5",
    "@types/react": "^16.7.13",
    "@types/react-dom": "^16.0.11",
    "auto-changelog": "^1.13.0",
    "gh-release": "^3.5.0",
    "husky": "^2.3.0",
    "netlify-lambda": "^1.6.3",
    "prettier": "^1.17.1",
    "pretty-quick": "^1.11.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "typescript": "^3.5.1"
  },
  "files": [
    "dist"
  ]
}
